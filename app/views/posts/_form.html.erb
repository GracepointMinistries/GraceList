<%= form_for(post) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="post_title">Title<%= required %></label>
    <%= f.text_field 'title', :size => "60", :tabindex => '1', class: 'form-control', placeholder: 'Title'  %>
  </div>

  <div class="form-group">
    <label for="category_id">Category<%= required %></label>
    <%= f.select 'category_id', Category.all.collect {|c| [c.name, c.id] }, :tabindex => '3', class: 'form-control' %>
  </div>

  <div class="form-group">
    <label for="post_description">Description<%= required %></label>
    <%= f.text_area 'description', :rows => "14", :cols => "60", :tabindex => '2', class: 'form-control'  %>
  </div>

  <div class="form-group">
    <label for="post_author">Your Name<%= required %></label>
    <%= f.text_field 'author', :tabindex => '4', class: 'form-control' %>
  </div>

  <div class="form-group">
    <label for="post_email">Your Email<%= required %></label>
    <%= f.email_field 'email', :tabindex => '5', class: 'form-control' %>
  </div>

  <div class="buttons">
    <%= submit_tag 'Save Post', :tabindex => '6', class: 'btn btn-primary' %> <%= link_to 'Back', root_path, class: 'btn btn-default' %>
  </div>
<% end %>
