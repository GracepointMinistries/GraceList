<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>
  <title>GraceList</title>
  <%= stylesheet_link_tag 'scaffold' %>
  <%= stylesheet_link_tag "styles", :media => "all" %>
  <%= javascript_include_tag  :defaults %>
  <link rel="alternate" type="application/rss+xml" title="RSS 2.0" href="<%= RSS %>" />
</head>
<body>

<div id="header">
	<div class="links">
		<%= link_to 'Home', { :controller => 'posts', :action => 'index' } %> | 
		<a href="<%= RSS %>">Subcribe to RSS</a> |
		<%= link_to 'About GraceList', { :controller => 'posts', :action => 'about' } %>
		<% if Post.recent_items > 0 %>
			<div class="emailUpdate">Email updates are sent Monday and Thursdays at 12pm</div>
		<% end %>
	</div>
	<div class="title">
		<h1><%= link_to 'GraceList', { :controller => 'posts', :action => 'index' } %></h1>
		<h2>Community Bulletin Board</h2>
	</div>
</div>

<div id="main">
	<p id="flash" style="color: green"><%= flash[:notice] %></p>	
	<%= "<h2 class=\"title\">#{@page_title}</h2>" if @page_title %>
	<%= @content_for_layout %>
</div>

<div id="footer">
  <div class="floatLeft">
    <a href="<%= SUPPORT_LINK %>">Need help? Contact Support</a>
  </div>
  <div class="floatRight">
    <a href="<%= RSS %>">Subscribe to RSS</a>.
  </div>
</div>

<script type="text/javascript">
  var uservoiceOptions = {
    key: 'gracepoint',
    host: 'feedback.gracepointministries.org', 
    forum: '89899',
    alignment: 'left',
    background_color:'#004c75', 
    text_color: 'white',
    hover_color: '#0066CC',
    lang: 'en',
    showTab: true
  };
  function _loadUserVoice() {
    var s = document.createElement('script');
    s.src = ("https:" == document.location.protocol ? "https://" : "http://") + "cdn.uservoice.com/javascripts/widgets/tab.js";
    document.getElementsByTagName('head')[0].appendChild(s);
  }
  _loadSuper = window.onload;
  window.onload = (typeof window.onload != 'function') ? _loadUserVoice : function() { _loadSuper(); _loadUserVoice(); };
</script>
</body>
</html>
